{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main",
    "scratchpad"
  ],
  "permissions": [
    "global-shortcut:default",
    "core:window:default",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:window:allow-is-visible",
    "core:window:allow-is-minimized"
  ]
}